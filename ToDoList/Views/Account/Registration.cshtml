@model ToDoList.Models.Business.Entites.User

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Register Forms</title>

    <!-- Icons font CSS-->
    <link href="~/lib/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/lib/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="~/lib/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/lib/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/css/registration.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Registration Form</h2>
                    <form method="POST" name="registration" id="registration" asp-action="CreateUser">
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="FirstName" class="label">first name</label>
                                    <input class="input--style-4" type="text" name="firstName" id="firstName">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="LastName" class="label">last name</label>
                                    <input class="input--style-4" type="text" name="lastName" id="lastName">
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="BirthDate" class="label">Birthday</label>
                                    <div class="input-group-icon">
                                        <input class="input--style-4" type="date" name="birthday" id="birthday">
                                    </div>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="Email" class="label">Email</label>
                                    <input class="input--style-4" type="email" name="email" id="email">
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="Password" class="label">Password</label>
                                    <input class="input--style-4" type="password" name="password" id="password">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">

                                    <label asp-for="ConfirmPassword" class="label">Confirm password</label>
                                    <input class="input--style-4" type="password" name="confirmPassword" id="confirmPassword">
                                </div>
                            </div>
                        </div>
                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue disabled" type="submit" disabled>Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script src="~/main.bundle.js"></script>>

    <!-- Jquery JS-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <!-- Vendor JS-->
    <script src="~/lib/select2/select2.min.js"></script>
    <script src="~/lib/datepicker/moment.min.js"></script>
    <script src="~/lib/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="~/lib/global.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
